<h1>Update Owner</h1>
<form action="/owners" method="POST">
    <input type="hidden" id="hidden" name="_method" value="patch">

    <label>Name:</label>

    <br></br>

    <input type="text" name="owner[name]" value="<%=@owner.name%>">

    <br></br>

    <h1>Select or Create Pet</h1>

    <label>New Pet Name:</label>

    <br></br>

    <input type="text" name="pet[name]">

    <br></br>

    <h1>Or... Select an existing pet.</h1>

    <br>

    <% @owner.pets.each do |pet| %>
        <p><input type="checkbox" name="pet_id" id="<%= pet.id %>" value="<%= pet.id %>" checked><%= pet.name %></p>
        <br>
    <% end %>

    <% @pets.each do |pet| %>
        <p><input type="checkbox" name="pet_id" id="<%= pet.id %>" value="<%= pet.id %>"><%= pet.name %></p>
        <br>
    <% end %>

  <input type="submit" value="Update Owner">
</form>
